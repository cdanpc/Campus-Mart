{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend: bootRun",
      "type": "shell",
      "command": ".\\gradlew.bat",
      "args": ["bootRun"],
      "options": {
        "cwd": "${workspaceFolder}\\backend"
      },
      "problemMatcher": ["$gradle"],
      "group": "build"
    },
    {
      "label": "frontend: dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}\\frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "app: start both",
      "dependsOn": [
        "backend: bootRun",
        "frontend: dev"
      ],
      "dependsOrder": "parallel"
    }
  ]
}
